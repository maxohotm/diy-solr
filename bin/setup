#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

# Create additional directories required by the diy cartridge
mkdir -p ${OPENSHIFT_DIY_SOLR_DIR}run


echo "download solr"
#wget http://apache.panu.it/lucene/solr/5.3.1/solr-5.3.1.tgz
curl -O http://apache.panu.it/lucene/solr/5.3.1/solr-5.3.1.tgz

echo "exstract solr"
tar xvf solr-5.3.1.tgz --directory=${OPENSHIFT_DIY_SOLR_DIR}
rm solr-5.3.1.tgz



client_result "Disclaimer: This is an experimental cartridge that provides a way to try unsupported languages, frameworks, and middleware on OpenShift."
