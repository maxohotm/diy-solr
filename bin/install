#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

#wget http://apache.panu.it/lucene/solr/5.3.1/solr-5.3.1.tgz
curl -O http://apache.panu.it/lucene/solr/5.3.1/solr-5.3.1.tgz

tar xvf solr-5.3.1.tgz --directory=${OPENSHIFT_DIY_SOLR_DIR}
rm solr-5.3.1.tgz

#shopt -s dotglob

export JAVA_HOME=$OPENSHIFT_JDK7
